# MCP Atlassian Configuration
# Copy this file to .env and fill in your credentials

# ==============================================================================
# CONFLUENCE CONFIGURATION
# ==============================================================================

# Confluence URL (Cloud or Server/Data Center)
CONFLUENCE_URL=https://confluence.accelior.com

# For Confluence Cloud (use API token)
CONFLUENCE_USERNAME=your.email@company.com
CONFLUENCE_API_TOKEN=your_confluence_api_token

# For Confluence Server/Data Center (use Personal Access Token)
# CONFLUENCE_PERSONAL_TOKEN=your_confluence_pat

# SSL Verification (set to false for self-signed certificates)
# CONFLUENCE_SSL_VERIFY=false

# ==============================================================================
# JIRA CONFIGURATION
# ==============================================================================

# Jira URL (Cloud or Server/Data Center)
JIRA_URL=https://accelior.atlassian.net

# For Jira Cloud (use API token)
JIRA_USERNAME=your.email@company.com
JIRA_API_TOKEN=your_jira_api_token

# For Jira Server/Data Center (use Personal Access Token)
# JIRA_PERSONAL_TOKEN=your_jira_pat

# SSL Verification (set to false for self-signed certificates)
# JIRA_SSL_VERIFY=false

# ==============================================================================
# OAUTH 2.0 CONFIGURATION (For multi-user authentication)
# ==============================================================================

# Run OAuth setup wizard first: docker-compose run --rm -p 8080:8080 mcp-atlassian --oauth-setup -v
# ATLASSIAN_OAUTH_CLIENT_ID=your_oauth_app_client_id
# ATLASSIAN_OAUTH_CLIENT_SECRET=your_oauth_app_client_secret
# ATLASSIAN_OAUTH_REDIRECT_URI=http://localhost:8080/callback
# ATLASSIAN_OAUTH_SCOPE=read:jira-work write:jira-work read:confluence-content.all write:confluence-content offline_access
# ATLASSIAN_OAUTH_CLOUD_ID=your_cloud_id_from_setup_wizard

# For BYOT (Bring Your Own Token) mode
# ATLASSIAN_OAUTH_ACCESS_TOKEN=your_pre_existing_oauth_access_token

# For minimal OAuth mode (multi-tenant)
# ATLASSIAN_OAUTH_ENABLE=true

# ==============================================================================
# FILTERING CONFIGURATION
# ==============================================================================

# Filter by Confluence space keys (comma-separated)
# CONFLUENCE_SPACES_FILTER=INFRA,DEV,DOC

# Filter by Jira project keys (comma-separated)
# JIRA_PROJECTS_FILTER=PROJ,DEV,SUPPORT

# ==============================================================================
# ACCESS CONTROL
# ==============================================================================

# Enable read-only mode (disable all write operations)
# READ_ONLY_MODE=true

# Enable only specific tools (comma-separated)
# ENABLED_TOOLS=confluence_search,confluence_get_page,jira_search,jira_get_issue

# ==============================================================================
# LOGGING & DEBUG
# ==============================================================================

# Enable verbose logging
MCP_VERBOSE=true

# Enable very verbose logging (includes request/response details)
# MCP_VERY_VERBOSE=true

# Log to stdout instead of stderr
MCP_LOGGING_STDOUT=true

# ==============================================================================
# PROXY CONFIGURATION (if needed)
# ==============================================================================

# HTTP_PROXY=http://proxy.internal:8080
# HTTPS_PROXY=http://proxy.internal:8080
# NO_PROXY=localhost,.your-company.com

# ==============================================================================
# CUSTOM HEADERS (for corporate environments)
# ==============================================================================

# Confluence custom headers (comma-separated key=value pairs, NO quotes)
# CONFLUENCE_CUSTOM_HEADERS=X-Custom-Header=value1,X-Another-Header=value2

# Jira custom headers (comma-separated key=value pairs, NO quotes)
# JIRA_CUSTOM_HEADERS=X-Forwarded-User=service-account,X-Company-Service=mcp-atlassian
