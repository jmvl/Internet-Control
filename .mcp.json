{
  "mcpServers": {
    "hetzner": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/dkruyt/mcp-hetzner.git",
        "mcp-hetzner"
      ],
      "env": {
        "HCLOUD_TOKEN": "${HCLOUD_TOKEN}"
      },
      "disabled": true
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ],
      "disabled": true
    },
    "brave-search": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@brave/brave-search-mcp-server",
        "--brave-api-key",
        "${BRAVE_API_KEY}"
      ],
      "alwaysAllow": [
        "brave_web_search"
      ]
    }
  }
}